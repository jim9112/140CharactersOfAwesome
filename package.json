{
  "name": "140CharactersOfAwesome",
  "version": "1.0.0",
  "description": "A social media site, like that other one but with less features Built with the MERN stack, this is a full stack app with user authentication that allows users to express themselves in 140 chracters or less",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "clientinstall": "npm install --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jim9112/140CharactersOfAwesome.git"
  },
  "keywords": [],
